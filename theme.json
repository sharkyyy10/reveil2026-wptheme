{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary-navy",
          "color": "#2D4871",
          "name": "Primary Navy"
        },
        {
          "slug": "action-orange",
          "color": "#F59B3C",
          "name": "Action Orange"
        },
        {
          "slug": "clean-white",
          "color": "#FFFFFF",
          "name": "Clean White"
        },
        {
          "slug": "light-neutral",
          "color": "#F4F6F8",
          "name": "Light Neutral"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Inter, system-ui, -apple-system, sans-serif",
          "slug": "inter",
          "name": "Inter"
        }
      ]
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": true,
      "spacingScale": {
        "operator": "*",
        "increment": 1.5,
        "steps": 7,
        "mediumStep": 1.5,
        "unit": "rem"
      }
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    }
  },
  "customTemplates": [
    {
      "name": "page-l-alternative",
      "title": "L'alternative",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-le-manifeste",
      "title": "Le Manifeste",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-le-projet",
      "title": "Le Projet",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-contact",
      "title": "Nous contacter",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-analyses",
      "title": "Analyses",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-mentions-legales",
      "title": "Mentions Légales",
      "postTypes": [
        "page"
      ]
    },
    {
      "name": "page-politique-confidentialite",
      "title": "Politique de confidentialité",
      "postTypes": [
        "page"
      ]
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--action-orange)",
      "text": "var(--wp--preset--color--clean-white)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "2rem"
    },
    "elements": {
      "h1": {
        "color": {
          "text": "var(--wp--preset--color--primary-navy)"
        },
        "typography": {
          "fontWeight": "bold"
        }
      },
      "h2": {
        "color": {
          "text": "var(--wp--preset--color--primary-navy)"
        },
        "typography": {
          "fontWeight": "bold"
        }
      },
      "button": {
        "border": {
          "radius": "8px",
          "color": "var(--wp--preset--color--clean-white)",
          "width": "2px",
          "style": "solid"
        },
        "color": {
          "background": "var(--wp--preset--color--action-orange)",
          "text": "var(--wp--preset--color--clean-white)"
        },
        "typography": {
          "fontWeight": "bold"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary-navy)"
        }
      }
    },
    "blocks": {
      "core/image": {
        "border": {
          "radius": "8px",
          "color": "var(--wp--preset--color--clean-white)",
          "width": "2px",
          "style": "solid"
        }
      },
      "core/group": {
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--50)",
            "bottom": "var(--wp--preset--spacing--50)",
            "left": "var(--wp--preset--spacing--50)",
            "right": "var(--wp--preset--spacing--50)"
          }
        }
      }
    }
  }
}